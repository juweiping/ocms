<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!-- Generated by Weiping Ju,this is a conent table template.-->
<!--
1)add CreationUserName,LastModifiedUserName,ContributionUserName field.
-->
<hibernate-mapping>
  <#if ct.tableName?default("")!="">
  	<#assign table_db=ct.tableName/>
  <class  entity-name="${ct.entityName}" table="${table_db}">
  <#else>
  	<#assign table_db="cms_content_"+ct.tableId/>
  <class  entity-name="Content_${ct.tableId}" table="${table_db}">
  </#if>
   <!--the fixed column-->
    <id name="contentId" length="10"  type="long" unsaved-value="0">
      <column name="ContentID"  not-null="true"/>
      <generator class="sequence">
			<param name="sequence">${table_db}_seq</param>
	  </generator>
    </id>
    <property name="creationDate" type="long" >
      <column name="CreationDate" not-null="true" default="0"/>
    </property>
    <property name="modifiedDate" type="long">
      <column name="ModifiedDate"  not-null="true" default="0"/>
    </property>
    <property name="creationUserId" type="long">
      <column name="CreationUserID"  not-null="true" default="0"/>
    </property>
	<property name="creationUserName" type="string">
      <column name="CreationUserName"   />
    </property>
    <property name="lastModifiedUserId" type="long">
      <column name="LastModifiedUserID"  not-null="true" default="0"/>
    </property>
	<property name="lastModifiedUserName" type="string">
      <column name="LastModifiedUserName"  />
    </property>
    <property name="contributionUserId" type="long">
      <column name="ContributionUserID"  not-null="true" default="0"/>
    </property>
	 <property name="contributionUserName" type="string">
      <column name="ContributionUserName"   />
    </property>
    <property name="contributionId" type="long">
      <column name="ContributionID"  not-null="true" default="0"/>
    </property>
    <!--the variable column-->
    <#list ct.contentFieldsSet as field>
    <#if field.fieldType?default("")=="contentlink">
     <property name="${field.fieldName}" type="text">
       <column name="${field.fieldName}" />
     </property>
    <#elseif field.fieldType?default("")=="varchar">

        <#if field.fieldSize?default("")=="">
          <property name="${field.fieldName}" column="${field.fieldName}" type="string"/>
        <#else>
          <property name="${field.fieldName}" column="${field.fieldName}" type="string" length="${field.fieldSize}"/>
        </#if>
    <#else>
      <property name="${field.fieldName}" type="${field.fieldType}">
        <#if field.fieldSize?default("")=="">
          <column name="${field.fieldName}"  />
          <#else>
            <column name="${field.fieldName}" length="${field.fieldSize}"/>
        </#if>
      </property>
    </#if>
    </#list>
  </class>
</hibernate-mapping>
