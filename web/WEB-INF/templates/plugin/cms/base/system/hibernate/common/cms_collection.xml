<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!-- Generated by Weiping Ju,this is a collection table template.  -->
<hibernate-mapping>
  <#if ct.tableName?default("")!="">
  <class entity-name="${ct.entityName}Collection" table="${ct.tableName}_collection">
  <#else>
  <class entity-name="Collection_${ct.tableId}" table="cms_collection_${ct.tableId}">
  </#if>
    <!--the fixed column-->
    <id name="collectionId" type="long" unsaved-value="0">
      <column name="CollectionID"  not-null="true"/>
      <generator class="native" />
    </id>
    <property name="cateId" type="long" not-null="true">
      <column name="CateID"  not-null="true" />
    </property>
    <property name="creationDate" type="long">
      <column name="CreationDate" />
    </property>
    <property name="modifiedDate" type="long">
      <column name="ModifiedDate" />
    </property>
    <property name="approvedDate" type="long">
      <column name="ApprovedDate" />
    </property>
    <property name="publishDate" type="long">
      <column name="PublishDate" />
    </property>
    <property name="state" type="long">
      <column name="State" />
    </property>
    <property name="nodeId" type="long">
      <column name="NodeID"  not-null="true" />
    </property>
    <property name="subNodeId" column="SubNodeID" type="string" not-null="true"/>
    <property name="src" column="Src" type="string" not-null="true"/>
    <property name="isImported" type="byte">
      <column name="IsImported"  not-null="true"/>
    </property>
    <!--the variable column-->
    <#if ct.contentFieldsSet??>
    <#list ct.contentFieldsSet as field>
    <#if field.fieldType?default("")=="contentlink">
     <property name="${field.fieldName}" type="text">
       <column name="${field.fieldName}" />
     </property>
    <#elseif field.fieldType?default("")=="varchar">

        <#if field.fieldSize?default("")=="">
          <property name="${field.fieldName}" column="${field.fieldName}" type="string"/>
        <#else>
          <property name="${field.fieldName}" column="${field.fieldName}" type="string" length="${field.fieldSize}"/>
        </#if>
    <#else>
      <property name="${field.fieldName}" type="${field.fieldType}">
        <#if field.fieldSize?default("")=="">
          <column name="${field.fieldName}" />
          <#else>
            <column name="${field.fieldName}" length="${field.fieldSize}"/>
        </#if>
      </property>
    </#if>
    </#list>
    </#if>
  </class>
</hibernate-mapping>
