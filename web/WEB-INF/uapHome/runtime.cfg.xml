<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <uapHome>E:\Projects\OpenUAP\openuap-forum\web\WEB-INF\uapHome
    </uapHome>
    <install>
        <setupStep>complete</setupStep>
        <setupType>custom</setupType>
        <buildNumber>1.0.1.20060323</buildNumber>
    </install>
    <base>
        <attachments>
            <dir>${uapHome}/attachments</dir>
        </attachments>
        <hibernate>
            <dynamic-mapping-dir>${uapHome}/hibernate</dynamic-mapping-dir>
        </hibernate>
        <index>
            <meta-dir>${uapHome}/index/meta</meta-dir>
        </index>
    </base>
    <cms>
        <editor button-file-name="${uapHome}/editor/Button.xml"
                        style-file-name="${uapHome}/editor/Style.xml" />
        <init>
            <data>
                <path>${uapHome}/data</path>
            </data>
        </init>
        <resource>
            <root-dir>${sys.path.root}/resource</root-dir>
        </resource>
        <sys>
            <tpl>
                <path>${cms.tpl.path}/systems</path>
            </tpl>
        </sys>
        <title>UAP-CMS</title>
        <tmp>
            <tpl>
                <path>${cms.tpl.path}/tmp</path>
            </tpl>
        </tmp>
        <tpl>
            <path>${sys.path.root}/WEB-INF/templates</path>
            <skin>
                <path>${cms.user.tpl.path}/skins</path>
            </skin>
        </tpl>
        <user>
            <tpl>
                <path>${sys.path.root}/templates</path>
            </tpl>
        </user>
        <mail>
            <smtp>
                <host>localhost</host>
                <port>25</port>
                <user>public@localhost</user>
                <password>8888</password>
                <auth>true</auth>
                <ssl>false</ssl>
                <from_email>public@localhost</from_email>
                <from_name>OpenUAP</from_name>
            </smtp>
        </mail>
        <upload-file>
			<!-- 1024*1024*100(100m) -->
            <max-size>104857600</max-size>
        </upload-file>
    </cms>
    <hibernate>
        <c3p0>
            <acquire_increment>1</acquire_increment>
            <idle_test_period>100</idle_test_period>
            <initialPoolSize>0</initialPoolSize>
            <max_size>20</max_size>
            <max_statements>0</max_statements>
            <min_size>5</min_size>
            <timeout>0</timeout>
        </c3p0>
        <connection>
            <SetBigStringTryClob>true</SetBigStringTryClob>
            <driver_class>com.mysql.jdbc.Driver</driver_class>
            <password>admin</password>
            <url>jdbc:mysql://localhost/cms2012?autoReconnect=true</url>
            <username>root</username>
        </connection>
        <dialect>org.hibernate.dialect.MySQLDialect</dialect>
        <setup>true</setup>
    </hibernate>
    <jdbc>
        <driverClass>com.mysql.jdbc.Driver</driverClass>
        <jdbcUrl>jdbc:mysql://localhost/cms2012?autoReconnect=true</jdbcUrl>
        <password>admin</password>
        <user>root</user>
        <acquireIncrement>1</acquireIncrement>
        <idleConnectionTestPeriod>100</idleConnectionTestPeriod>
        <initialPoolSize>5</initialPoolSize>
        <maxPoolSize>20</maxPoolSize>
        <maxStatements>0</maxStatements>
        <minPoolSize>5</minPoolSize>
        <checkoutTimeout>0</checkoutTimeout>
    </jdbc>
    <persistence>
        <jdbc>
            <setup>true</setup>
        </jdbc>
        <type>jdbc</type>
    </persistence>
    <sys>
        <cache>
            <config>
                <path>${uapHome}/cache/cms-cache.ccf</path>
            </config>
        </cache>
        <charset>
            <encoding>UTF-8</encoding>
        </charset>
        <default>
            <contentType>text/html;charset=UTF-8</contentType>
        </default>
        <enableChangeLanguage>false</enableChangeLanguage>
        <log>
            <config>
                <dev_enable>false</dev_enable>
                <path>${uapHome}/logs/log4j.xml</path>
            </config>
            <message>${uapHome}/logs/logmessage.xml</message>
        </log>
        <mime>
            <types>${uapHome}/mime.types</types>
        </mime>
        <path>
            <backup-dir>${uapHome}/data</backup-dir>
            <faces-dir>
                <current-upload-dir>/upload</current-upload-dir>
                <path>${sys.path.root}/faces</path>
            </faces-dir>
            <index-dir>${uapHome}/index</index-dir>
            <index-meta-dir>${uapHome}/index/meta</index-meta-dir>
            <logs-dir>${uapHome}/logs/log</logs-dir>
            <pub>${sys.path.root}</pub>
            <resources-dir>${uapHome}/resources</resources-dir>
            <root>E:\Projects\OpenUAP\openuap-forum\web</root>
            <templates-dir>${sys.path.root}/WEB-INF/templates/default
            </templates-dir>
            <upload>
                <threshold>1024000000</threshold>
                <snap_threshold>64000</snap_threshold>
                <snap_width>640</snap_width>
                <base-dir>${sys.path.pub}/upload</base-dir>
                <tmp-dir>${uapHome}/attachments/tmp</tmp-dir>
                <pic-dir>${sys.path.pub}/pics</pic-dir>
                <doc-dir>${sys.path.pub}/docs</doc-dir>
            </upload>
        </path>
        <security>
            <admin>
                <password>openuap</password>
                <username>openuap</username>
            </admin>
        </security>
        <url>
            <use-custom-url>false</use-custom-url>
            <homepage>http://localhost:8080/</homepage>
            <images>http://localhost:8080/web/images</images>
            <upload>${attachments.dir}</upload>
        </url>
        <db>
            <type>org.openuap.base.orm.dialect.MySQLDialect</type>
        </db>
        <setup>
            <url>setup/index.htm</url>
        </setup>
        <profile>true</profile>
    </sys>
    <object_locator>
        <no_plugin>true</no_plugin>
    </object_locator>
</configuration>
